<!-- list.erb (Code Challenge: Dynamic Directory Index for "Working w/ Sinatra") -->

          <div class="pure-menu">
            <ul class="pure-menu-list">
              <% @public_files.each do |filename| %>
                <li class="pure-menu-item">
                  <a href="<%= filename %>"><%= filename %></a>
                </li>
              <% end %>
            </ul>

            <p>
              <% if params[:sort] == "desc" %>
                <a href="/">Sort Ascending</a>
              <% else %>
                <a href="/?sort=desc">Sort Descending</a>
              <% end %>
            </p>
          </div>
